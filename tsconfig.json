{
  "compilerOptions": {
    "outDir": "./src", // Output folder for compiled files
    "rootDir": "./typescript", // Root folder containing your TypeScript files
    "strict": true, // Optional: Enables all strict type-checking options
    "target": "ES6", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "skipLibCheck": false, // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true // Enforces consistent casing
  },
  "include": ["typescript/**/*", "typescript/controllers"], // Include all files in the typescript directory
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude node_modules and test files
}
