{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./src",           // Output directory for compiled JS
    "rootDir": "./typescript",   // Input directory for TS files
    "resolveJsonModule": true
  },
  "include": ["typescript/**/*.ts"], // Include all TS files in the `typescript` folder
  "exclude": ["node_modules"]        // Exclude `node_modules` folder
}
